{
    "keyboard.dispatch": "keyCode",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#ff0000"
    },
    "editor.rulers": [
        80,
        100
    ],
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "workbench.panel.defaultLocation": "left",
    "workbench.editor.wrapTabs": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "python.showStartPage": false,
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "extensions.ignoreRecommendations": false,
    "terminal.integrated.inheritEnv": false,
    "python.analysis.extraPaths": [
        "/home/simon/miniconda3/envs/edms_env/bin",
        "./edms/sources",
        "./edms/tests",
        "./extract/sources",
        "./genius/sources"
    ],
    "python.autoComplete.extraPaths": [],
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnPaste": false,
        "editor.formatOnSaveMode": "file"
    },
    "editor.defaultFormatter": "svelte.svelte-vscode",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "diffEditor.renderSideBySide": true,
    "search.exclude": {
        "**/__sapper__": true
    },
    "editor.fontSize": 19,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications",
    "svelte.plugin.svelte.format.config.svelteSortOrder": "options-scripts-styles-markup",
    "update.showReleaseNotes": false,
    "update.mode": "none",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "svelte.enable-ts-plugin": true,
    "svelte.plugin.svelte.format.config.printWidth": 100,
    "svelte.plugin.svelte.format.config.svelteStrictMode": true,
    "svelte.plugin.svelte.compilerWarnings": {
        "css-unused-selector": "ignore"
    },
    "window.zoomLevel": 2,
}